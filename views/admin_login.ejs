        <div class="input-group" data-aos="zoom-in" data-aos-delay="100">
          <i class="fas fa-phone"></i>
          <input type="tel" placeholder="Phone Number" name="phone" />
        </div>
        <div class="input-group" data-aos="zoom-in" data-aos-delay="200">
          <i class="fas fa-key"></i>
          <input type="text" placeholder="Enter OTP" name="otp" />
        </div>
        <button data-aos="zoom-in" data-aos-delay="300" class="btn" type="submit">Login via OTP</button>
      </form> -->

  
      <form class="tab-content" id="phoneTab" action="/phone-login" method="POST">
  <!-- Phone Input -->
  <div class="input-group" data-aos="zoom-in" data-aos-delay="100">
    <i class="fas fa-phone"></i>
    <input type="tel" name="phone" id="phoneInput" placeholder="Enter Phone Number" required />
  </div>

  <!-- OTP Section (Initially Hidden) -->
  <div class="input-group" id="otpGroup" style="display: none;" data-aos="zoom-in" data-aos-delay="200">
    <i class="fas fa-key"></i>
    <input type="text" name="otp" id="otpInput" placeholder="Enter OTP" />
  </div>

  <!-- Get OTP Button -->
  <button class="btn" id="getOtpBtn" type="button" data-aos="zoom-in" data-aos-delay="300">
    <i class="fas fa-paper-plane"></i> Get OTP
  </button>

  <!-- Submit OTP Button (Initially Hidden) -->
  <button class="btn" id="loginOtpBtn" type="submit" style="display: none;" data-aos="zoom-in" data-aos-delay="400">
    <i class="fas fa-sign-in-alt"></i> Login via OTP
  </button>
      </form>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const getOtpBtn = document.getElementById('getOtpBtn');
    const loginOtpBtn = document.getElementById('loginOtpBtn');
    const otpGroup = document.getElementById('otpGroup');
    const phoneInput = document.getElementById('phoneInput');

    getOtpBtn.addEventListener('click', async () => {
      const phone = phoneInput.value.trim();
      if (!/^\d{10}$/.test(phone)) {
        alert('Please enter a valid 10-digit phone number');
        return;
      }

      try {
        // Send OTP request to backend (optional AJAX)
        await fetch('/send-phone-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ phone })
        });

        // Show OTP input and login button
        getOtpBtn.style.display = 'none';
        otpGroup.style.display = 'flex';
        loginOtpBtn.style.display = 'inline-block';
      } catch (err) {
        alert('Failed to send OTP. Please try again.');
      }
    });
  });
</script>



