<!-- üîπ Hospital , clinics , labs Cards -->
 <!-- <div class="centeralised-cards" id="hospitalList" ></div>
    (include this id when u need to search the cards.. removed now due to its creating issue in image loading)-->
 <div class="centeralised-cards" >
  <% hospitals.forEach(hospital => { %>
  <% if (hospital.adminId) { %>
    <% 
      let queueClass = 'light';
      if (hospital.tokenCount > 20) queueClass = 'busy';
      else if (hospital.tokenCount > 10) queueClass = 'moderate';
    %>

    <div class="hospital-card <%= queueClass %>" data-id="<%= hospital._id %>">
      <div style="position: relative;">

   <img src="<%= hospital.shopImage?.startsWith('/uploads') ? hospital.shopImage : '/shopImages/' + hospital.shopImage %>" 
     alt="Hospital Image"
     onerror="this.onerror=null; this.src='https://cdn-icons-png.flaticon.com/512/2965/2965567.png';" 
     style="width: 100%; height: 180px; object-fit: cover;" />


        <!-- üü¢ Open/Closed Badge -->
        <div id="status-<%= hospital._id %>" class="shop-status <%= hospital.isOpen ? 'open' : 'closed' %>">
          <i class="fas fa-circle status-indicator"></i>
          <%= hospital.isOpen ? 'Open' : 'Closed' %>
        </div>

      </div>

      <div class="hospital-info">
        <h3><%= hospital.shopname %></h3>
        <p class="location">üìç <%= hospital.shopaddress %></p>
        <p class="rating">‚≠ê <%= hospital.rating || '4.0' %> (<%= hospital.reviews || '100+' %> reviews)</p>

        <!-- Queue Info -->
        <div class="queue-info <%= queueClass %>">
          <span class="count"><%= hospital.tokenCount %> in Queue</span>
          <span class="time">~<%= hospital.formattedWait %></span>
        </div>

        <!-- üîπ Wait Progress Bar -->
        <div class="wait-bar">
          <div class="fill"
               id="fill-<%= hospital._id %>"
               style="width: <%= hospital.fillPercent %>%; background:linear-gradient(to right, #4ade80, #22c55e);">
          </div>
        </div>

        <p><strong>Admin:</strong> <%= hospital.adminId?.name || 'Not Available' %></p>
        <%
            let specialtiesArray = [];

            if (Array.isArray(hospital.specialties)) {
              specialtiesArray = hospital.specialties;
            } else if (typeof hospital.specialties === 'string') {
              specialtiesArray = hospital.specialties.split(',').map(s => s.trim());
            }
          %>

          <% if (specialtiesArray.length > 0) { %>
            <p class="specialties">
              <strong>Specialties:</strong>
              <% specialtiesArray.slice(0, 3).forEach((specialty, index) => { %>
                <%= specialty %><%= index < specialtiesArray.slice(0, 3).length - 1 ? ', ' : '' %>
              <% }) %>
            </p>
          <% } else { %>
            <p class="specialties"><strong>Specialties:</strong> General Physician</p>
          <% } %>


        <p class="contact">üìû <%= hospital.phone || '+91 XXXXX XXXXX' %></p>
        <a href="/hospital/<%= hospital._id %>" class="btn">View Details</a>
      </div>
    </div>
  <% } %>
<% }) %>
</div>





