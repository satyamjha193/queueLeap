<!-- Google reCAPTCHA v3 (replace with your actual site key) -->
<script src="https://www.google.com/recaptcha/api.js?render=<%= siteKey %>"></script>

<script>
  // Slider navigation between Contact and Feedback sections
  function slideTo(section) {
    const slider = document.getElementById("cardSlider");
    if (!slider) return;

    slider.style.transform = section === 'contact' ? 'translateX(0%)' : 'translateX(-50%)';
    history.pushState(null, "", `/${section}`);
  }

  // Feedback form submission with reCAPTCHA
  document.addEventListener("DOMContentLoaded", function () {
    const feedbackForm = document.querySelector('.feedback-form');

    if (feedbackForm) {
      feedbackForm.addEventListener('submit', function (e) {
        e.preventDefault(); // stop default form submit

        grecaptcha.ready(function () {
          grecaptcha.execute('<%= siteKey %>', { action: 'submit_feedback' }).then(function (token) {
            const tokenInput = document.getElementById('recaptchaToken');
            if (tokenInput) {
              tokenInput.value = token;
              feedbackForm.submit(); // submit form after token is set
            }
          });
        });
      });
    }

    // Handle slider state on page load
    const slider = document.getElementById("cardSlider");
    const path = window.location.pathname;

    if (slider) {
      if (path === "/feedback") {
        slider.style.transform = 'translateX(-50%)';
      } else if (path === "/contact") {
        slider.style.transform = 'translateX(0%)';
      }
    }
  });

  // Update slider on back/forward browser navigation
  window.addEventListener("popstate", () => {
    const slider = document.getElementById("cardSlider");
    const path = window.location.pathname;

    if (slider) {
      if (path === "/feedback") {
        slider.style.transform = 'translateX(-50%)';
      } else {
        slider.style.transform = 'translateX(0%)';
      }
    }
  });
</script>

